#!/bin/bash
# Bash wrappers for docker run commands

export DOCKER_REPO_PREFIX=us.gcr.io/heureka-dev

#
# Helper Functions
#
dcleanup(){
  local containers
  containers=( "$(docker ps -aq 2>/dev/null)" )
  docker rm "${containers[@]}" 2>/dev/null
  local volumes
  volumes=( "$(docker ps --filter status=exited -q 2>/dev/null)" )
  docker rm -v "${volumes[@]}" 2>/dev/null
  local images
  images=( "$(docker images --filter dangling=true -q 2>/dev/null)" )
  docker rmi "${images[@]}" 2>/dev/null
}

del_stopped(){
  local name=$1
  local state
  state=$(docker inspect --format "{{.State.Running}}" "$name" 2>/dev/null)

  if [[ "$state" == "false" ]]; then
  docker rm "$name"
  fi
}

relies_on(){
  for container in "$@"; do
    local state
    state=$(docker inspect --format "{{.State.Running}}" "$container" 2>/dev/null)

    if [[ "$state" == "false" ]] || [[ "$state" == "" ]]; then
      echo "$container is not running, starting it for you."
      $container
    fi
  done
}

check-for-ugrades(){
    read -r -s -p "Sudo Password: " SUDO_PASSWORD
    if ! echo "${SUDO_PASSWORD}" | sudo -S echo "Updating"
    then
        gcloud components update
        echo "${SUDO_PASSWORD}" | sudo -S apt-get update
        echo "${SUDO_PASSWORD}" | sudo -S apt-get upgrade -y
    else
        echo "Invalid password"
    fi
    unset SUDO_PASSWORD
}

reset-wifi(){
    # TODO: If linux only
    sudo rmmod wl
    sudo modprobe wl
    killall nm-applet && nm-applet &
}


docker-df() {
  watch -n 5 docker system df
}

docker-ps() {
  docker ps -a --format 'table {{.Names}}\t{{.Image}}\t{{.RunningFor}}\t{{.Status}}' | sort
}

docker-ilq() {
  docker image ls "quay.io/invision/${1}:${2:-master}"
}

docker-pq() {
  docker pull "quay.io/invision/${1}:${2:-master}"
}

docker-rq() {
  docker run --rm -it "quay.io/invision/${1}:${2:-master}" /bin/sh
}
